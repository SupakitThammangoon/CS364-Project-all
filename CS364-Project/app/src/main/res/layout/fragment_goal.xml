<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".GoalFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <!-- เนื้อหาหน้า Home -->
        <LinearLayout
            android:id="@+id/homeContent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="@dimen/padding_medium"
            android:fitsSystemWindows="true">

            <!-- กล่องแสดงปริมาณน้ำวันนี้ -->
            <LinearLayout
                android:id="@+id/layoutWaterToday"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="@dimen/height_extralarge"
                android:layout_marginTop="@dimen/margin_large"
                android:background="@drawable/box"
                android:elevation="@dimen/elevation"
                android:gravity="center"
                android:orientation="vertical"
                android:padding="@dimen/padding_medium">

                <!-- Goal -->
                <TextView
                    android:id="@+id/tvGoal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_small"
                    android:gravity="center"
                    android:text="@string/goal"
                    android:textSize="@dimen/title_size" />

                <!-- Progress ปริมาณน้ำ -->
                <ProgressBar
                    android:id="@+id/progressBar"
                    style="?android:attr/progressBarStyleHorizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:minHeight="@dimen/height_medium"
                    android:layout_marginTop="@dimen/margin_large"
                    android:max="100"
                    android:progress="0"
                    android:progressDrawable="@drawable/progress_bar" />

                <!-- ดื่มแล้ว / เป้าทั้งหมด -->
                <TextView
                    android:id="@+id/tvWaterTotal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_large"
                    android:text="@string/compare"
                    android:textSize="@dimen/title_size" />
            </LinearLayout>

            <!--  กล่องเพิ่มปริมาณน้ำ  -->
            <LinearLayout
                android:id="@+id/layoutWaterAdd"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_large"
                android:background="@drawable/box"
                android:elevation="@dimen/elevation"
                android:orientation="vertical"
                android:padding="@dimen/padding_medium">

                <TextView
                    android:id="@+id/tvAdd"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/add"
                    android:layout_gravity="center_horizontal"
                    android:textSize="@dimen/title_size" />

                <!-- แถวปุ่ม 250 / 500 / 750 -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_large"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <!-- ปุ่ม 250 ml -->
                    <LinearLayout
                        android:id="@+id/btnAdd250"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:minHeight="@dimen/height_btn"
                        android:layout_marginEnd="@dimen/margin_small"
                        android:layout_weight="1"
                        android:background="@drawable/box_water"
                        android:gravity="center"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="@dimen/width_small"
                            android:layout_height="@dimen/height_small"
                            android:src="@drawable/drop" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/add_drop" />
                    </LinearLayout>

                    <!-- ปุ่ม 500 ml -->
                    <LinearLayout
                        android:id="@+id/btnAdd500"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:minHeight="@dimen/height_btn"
                        android:layout_marginStart="@dimen/margin_small"
                        android:layout_marginEnd="@dimen/margin_small"
                        android:layout_weight="1"
                        android:background="@drawable/box_water"
                        android:gravity="center"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="@dimen/width_small"
                            android:layout_height="@dimen/height_small"
                            android:src="@drawable/cup" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/add_cup" />
                    </LinearLayout>

                    <!-- ปุ่ม 750 ml -->
                    <LinearLayout
                        android:id="@+id/btnAdd750"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:minHeight="@dimen/height_btn"
                        android:layout_marginStart="@dimen/margin_small"
                        android:layout_weight="1"
                        android:background="@drawable/box_water"
                        android:gravity="center"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="@dimen/width_small"
                            android:layout_height="@dimen/height_small"
                            android:src="@drawable/bottle" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/add_bottle" />
                    </LinearLayout>
                </LinearLayout>

                <!-- แถวกำหนดเอง -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_large"
                    android:orientation="horizontal">

                    <EditText
                        android:id="@+id/edtCustomAmount"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:minHeight="@dimen/height_edit_text"
                        android:layout_weight="1"
                        android:background="@drawable/box_water"
                        android:hint="@string/hint_add"
                        android:inputType="number"
                        android:paddingStart="@dimen/padding_medium"
                        android:paddingEnd="@dimen/padding_medium" />

                    <LinearLayout
                        android:id="@+id/btnAddCustom"
                        android:layout_width="56dp"
                        android:layout_height="wrap_content"
                        android:minHeight="@dimen/height_edit_text"
                        android:layout_marginStart="@dimen/margin_small"
                        android:background="@drawable/box_water"
                        android:gravity="center">

                        <ImageView
                            android:layout_width="@dimen/width_small"
                            android:layout_height="@dimen/height_small"
                            android:src="@drawable/add" />
                    </LinearLayout>
                </LinearLayout>

            </LinearLayout>

            <!-- กล่องตั้งเวลาแจ้งเตือน -->
            <LinearLayout
                android:id="@+id/layoutReminder"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_large"
                android:background="@drawable/box"
                android:elevation="@dimen/elevation"
                android:orientation="vertical"
                android:padding="@dimen/padding_medium">

                <!-- แถวบน: ไอคอนกระดิ่ง + ข้อความ + สวิตช์ -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="@dimen/width_small"
                        android:layout_height="@dimen/height_small"
                        android:src="@drawable/bell" />

                    <TextView
                        android:id="@+id/tvReminderTitle"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/margin_medium"
                        android:layout_weight="1"
                        android:text="@string/notify"
                        android:textSize="@dimen/text_size" />

                    <!-- สวิตช์เปิด/ปิด -->
                    <Switch
                        android:id="@+id/switchReminder"
                        android:layout_width="@dimen/height_edit_text"
                        android:layout_height="@dimen/height_edit_text"
                        android:padding="5dp"
                        tools:ignore="UseSwitchCompatOrMaterialXml" />
                </LinearLayout>

                <!-- เส้นคั่น -->
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="@dimen/margin_medium"
                    android:background="#FFFFFFFF" />

                <!-- แถวกำหนดช่วงเวลา  -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_medium"
                    android:gravity="center_vertical"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/remind"
                        android:textSize="@dimen/text_size" />

                    <!-- ช่องกรอกนาที -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/margin_medium"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <EditText
                            android:id="@+id/edtInterval"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:minHeight="@dimen/height_edit_text"
                            android:layout_weight="1"
                            android:background="@drawable/box_water"
                            android:hint="@string/hint_notify"
                            android:focusable="false"
                            android:clickable="true"
                            android:inputType="none"
                            android:paddingStart="@dimen/padding_medium"
                            android:paddingEnd="@dimen/padding_medium"/>

                        <!-- ปุ่มบันทึก/เพิ่มช่วงเวลา -->
                        <LinearLayout
                            android:id="@+id/btnSaveInterval"
                            android:layout_width="56dp"
                            android:layout_height="48dp"
                            android:layout_marginStart="@dimen/margin_small"
                            android:background="@drawable/box_water"
                            android:gravity="center">

                            <ImageView
                                android:layout_width="@dimen/width_small"
                                android:layout_height="@dimen/height_small"
                                android:src="@drawable/add"/>
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>

            </LinearLayout>


        </LinearLayout>


    </ScrollView>


</FrameLayout>
